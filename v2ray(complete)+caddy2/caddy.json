{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        },
        "encoder": {
          "format": "console"
        },
        "level": "ERROR"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": ["127.0.0.1:80"], //只监听本机端口，避免除本机外的机器探测及非安全web访问。
          "routes": [{
            "match": [{
              "path": ["/SeuW56Es"] //分流出h2,与v2ray h2 path对应。
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http",
                "keep_alive": {
                  "enabled": false
                },
                "versions": ["h2c"]
              },
              "upstreams": [{
                "dial": "127.0.0.1:2002" //转发给本机v2ray h2 端口
              }]
            }],
            "terminal": true
          },
          {
            "handle": [{
              "handler": "file_server",
              "root": "/var/www/html" //修改成自己存放的web文件路径
            }],
            "terminal": true
          }],
          "errors": {
            "routes": [{
              "handle": [{
                "handler": "error",
                "error": "warning",
                "status_code": "404"
              }],
              "terminal": true
            }]
          },
          "automatic_https": {
            "disable": true
          },
          "allow_h2c": true //开启h2c server支持。
        }
      }
    }
  }
}
