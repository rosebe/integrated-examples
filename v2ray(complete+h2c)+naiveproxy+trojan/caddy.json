{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        },
        "encoder": {
          "format": "console"
        },
        "level": "ERROR"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": ["127.0.0.1:88"], //只监听本机端口，避免除本机外的机器探测及非安全web访问。此端口主要为web回落应用。
          "routes": [{
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000"] //启用HSTS
                }
              }
            },
            {
              "handler": "file_server",
              "root": "/var/www/html" //修改为自己存放的web文件路径
            }],
            "terminal": true
          }],
          "allow_h2c": true //开启h2c server支持
        },
        "srv1": {
          "listen": [":80"], //http默认监听端口
          "routes": [{
            "handle": [{
              "handler": "static_response",
              "status_code": "301", 
              "headers": {
              	"Location": ["https://{http.request.host}{http.request.uri}"] //http自动跳转https,让网站看起来更真实。
              }
            }],
            "terminal": true
          }]
        },
        "srv2": {
          "listen": ["127.0.0.1:7443"], //https监听端口。只监听本机端口，避免除本机外的机器探测及非安全web访问。
          "routes": [{
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000"] //启用HSTS
                }
              }
            },
            {
              "handler": "forward_proxy",
              "hide_ip": true,
              "hide_via": true,
              "auth_user": "user", //naiveproxy账号，修改为自己的。
              "auth_pass": "pass", //naiveproxy密码，修改为自己的。
              "probe_resistance": {
              	"domain": "unsplash.com:443"
              }
            }]
          },
          {
            "handle": [{
              "handler": "subroute",
              "routes": [{
                "match": [{
                  "path": ["/SeuW56Es"] //分流出h2,与v2ray h2 path对应。
                }],
                "handle": [{
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "keep_alive": {
                      "enabled": false
                    },
                    "versions": ["h2c"]
                  },
                  "upstreams": [{
                    "dial": "127.0.0.1:2005" //与v2ray h2 端口对应
                  }]
                }],
                "terminal": true
              },
              {
                "handle": [{
                  "handler": "file_server",
                  "root": "/var/www/html" //修改为自己存放的web文件路径
                }],
                "terminal": true
              }]
            }],
            "terminal": true
          }],
          "tls_connection_policies": [{
            "cipher_suites": ["TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384","TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256","TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256"],
            "alpn": ["h2","http/1.1"],
            "default_sni": "xx.yy" //修改成自己的域名
          }],
          "automatic_https": {
            "disable_redirects": true //禁用自己自动http->https重定向
          }
        }
      }
    },
    "tls": {
      "certificates": {
        "load_files": [{
          "certificate": "/etc/ssl/tls/xx.yy.crt", // 换成你的证书，绝对路径。
          "key": "/etc/ssl/tls/xx.yy.key" // 换成你的私钥，绝对路径。
        }]
      }
    }
  }
}
