{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        },
        "encoder": {
          "format": "console"
        },
        "level": "ERROR"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": ["unix//dev/shm/h1h2c.sock"], //h2与http/1.1回落进程
          "listener_wrappers": [{
            "wrapper": "proxy_protocol", //开启PROXY protocol接收
            "timeout": "5s"
          }],
          "routes": [{
            "handle": [{
              "handler": "file_server",
              "root": "/var/www/html" //修改成自己存放的web文件路径
            }],
            "terminal": true
          }],
          "allow_h2c": true //开启h2c server支持
        },
        "srv1": {
          "listen": [":80"], //http默认监听端口
          "routes": [{
            "handle": [{
              "handler": "static_response",
              "status_code": "301", 
              "headers": {
              	"Location": ["https://{http.request.host}{http.request.uri}"] //http自动跳转https,让网站看起来更真实。
              }
            }],
            "terminal": true
          }]
        }
      }
    }
  }
}
