{
  "admin": {
    "disabled": true
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":443"],
          "routes": [{
            "match": [{
              "host": ["xx.yy"] //修改成自己的域名
            }],
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000"] //启用HSTS
                }
              }
            },
            {
              "handler": "subroute",
              "routes": [{
                "match": [{
                  "path": ["/HALdGZ9k"], //分流出ws,与本机v2ray ws path对应。
                  "header": {
                    "Connection": ["*Upgrade*"],
                    "Upgrade": ["websocket"]
                  }
                }],
                "handle": [{
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "keep_alive": {
                      "enabled": false
                    }
                  },
                  "upstreams": [{
                    "dial": "127.0.0.1:2001" //转发给本机v2ray ws对应端口
                  }]
                }],
                "terminal": true
              },
              {
                "match": [{
                  "path": ["/ss1v2ray"], //分流出ws,与本机shadowsocks ws path对应。
                  "header": {
                    "Connection": ["*Upgrade*"],
                    "Upgrade": ["websocket"]
                  }
                }],
                "handle": [{
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "keep_alive": {
                      "enabled": false
                    }
                  },
                  "upstreams": [{
                    "dial": "127.0.0.1:2002" //转发给本机shadowsocks ws对应端口
                  }]
                }],
                "terminal": true
              },
              {
                "match": [{
                  "path": ["/SeuW56Es"] //分流出h2,与本机v2ray h2 path对应。
                }],
                "handle": [{
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "keep_alive": {
                      "enabled": false
                    },
                    "versions": ["h2c"]
                  },
                  "upstreams": [{
                    "dial": "127.0.0.1:2005" //转发给本机v2ray h2对应端口
                  }]
                }],
                "terminal": true
              },
              {
                "handle": [{
                  "handler": "file_server",
                  "root": "/var/www/html" //修改成自己存放的web文件路径
                }],
                "terminal": true
              }]
            }],
            "terminal": true
          }],
          "tls_connection_policies": [{
            "cipher_suites": ["TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384","TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256","TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256"],
            "alpn": ["h2","http/1.1"],
            "default_sni": "xx.yy" //修改成自己的域名
          }]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [{
          "subjects": ["xx.yy"], //修改成自己的域名
          "issuer": {
            "module": "acme"
          }
        }]
      }
    }
  }
}
